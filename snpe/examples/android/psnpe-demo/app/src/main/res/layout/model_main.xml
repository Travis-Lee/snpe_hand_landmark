<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modelLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/testInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/testInfoColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/executeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="@string/Status"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/run_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/resultNotReady"
            android:onClick="run"
            android:text="@string/RUN" />

        <Button
            android:id="@+id/stress_run_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/red"
            android:onClick="stressRun"
            android:text="@string/StressTest" />

        <Button
            android:id="@+id/result_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/resultReady"
            android:onClick="showResult"
            android:text="@string/ShowResult" />
    </LinearLayout>


</LinearLayout>
